<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_container"
    app:startDestination="@id/drawerMainContainerFragment">

    <fragment
        android:id="@+id/drawerMainContainerFragment"
        android:name="com.southernsunrise.foodie.fragments.DrawerMainContainerFragment"
        android:label="fragment_drawer_main_container"
        tools:layout="@layout/fragment_drawer_main_container" >
        <action
            android:id="@+id/action_drawerMainContainerFragment_to_profileScreenFragment"
            app:destination="@id/profileScreenFragment"/>

        <action
            android:id="@+id/action_drawerMainContainerFragment_to_cartFragment"
            app:destination="@id/cartFragment" />

    </fragment>
    <fragment
        android:id="@+id/profileScreenFragment"
        android:name="com.southernsunrise.foodie.fragments.ProfileScreenFragment"
        android:label="fragment_profile_screen"
        tools:layout="@layout/fragment_profile_screen" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.southernsunrise.foodie.fragments.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.southernsunrise.foodie.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.southernsunrise.foodie.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/paymentMethodsFragment"
        android:name="com.southernsunrise.foodie.PaymentMethodsFragment"
        android:label="fragment_payment_methods"
        tools:layout="@layout/fragment_payment_methods" />
</navigation>